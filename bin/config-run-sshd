#!/bin/bash -e

shome="$(unset CDPATH; cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"

cd $shome
unset BUNDLE_GEMFILE
export AUTHORIZED_KEYS=$2
make sshd

port_file="$1"; shift

function finish {
  if [[ -f "$port_file" ]]; then
    rm -f "$port_file"
  fi
} 
trap finish EXIT

echo $PORT > $port_file
exec /usr/sbin/sshd -D -e -f $shome/etc/sshd_config
